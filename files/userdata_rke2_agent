#!/bin/bash -x
export rancher_server_ip='${server_address}'

apt -y install curl || true
snap install jq || true

%{ if hardening }
# === Begin CIS Hardening ===
echo "[HARDENING] Creating etcd user..."
useradd -r -c "etcd user" -s /sbin/nologin -M etcd -U || true

echo "[HARDENING] Configuring sysctl for kubelet..."
cat <<SYSCTL | tee /etc/sysctl.d/90-kubelet.conf
vm.panic_on_oom=0
vm.overcommit_memory=1
kernel.panic=10
kernel.panic_on_oops=1
SYSCTL

sysctl -p /etc/sysctl.d/90-kubelet.conf
# === End CIS Hardening ===
%{ endif }

while true; do
  curl -sLk https://$rancher_server_ip/ping && sleep 15 && break
  sleep 5
done

# Login
while true; do

    LOGINRESPONSE=$(curl -s "https://$rancher_server_ip/v3-public/localProviders/local?action=login" -H 'content-type: application/json' --data-binary '{"username":"admin","password":"${admin_password}"}' --insecure)
    LOGINTOKEN=$(echo $LOGINRESPONSE | jq -r .token)

    if [ "$LOGINTOKEN" != "" ] && [ "$LOGINTOKEN" != "null" ]; then
        break
    else
        sleep 5
    fi
done

# Test if cluster is created
while true; do
  CLUSTERID=$(curl \
      -sLk \
      -H "Authorization: Bearer $LOGINTOKEN" \
      "https://$rancher_server_ip/v3/clusters?name=${cluster_rke2_name}" | jq -r '.data[].id')

  if [ -n "$CLUSTERID" ]; then
    break
  else
    sleep 5
  fi
done

# Get role flags from hostname
ROLEFLAG=`hostname | awk -F'-' '{ print $(NF-1) }'`

# Set env for kubectl on rke2 server nodes
if [[ "$ROLEFLAG" == "all" || "$ROLEFLAG" == "master" || "$ROLEFLAG" == "controlplane" ]]; then
  cat << 'EOF' > /etc/profile.d/rancher.sh
export KUBECONFIG=/etc/rancher/rke2/rke2.yaml
export CRI_CONFIG_FILE=/var/lib/rancher/rke2/agent/etc/crictl.yaml
export CONTAINERD_ADDRESS=/run/k3s/containerd/containerd.sock
PATH="$PATH:/var/lib/rancher/rke2/bin"
EOF
fi

# Set role flag for all role and master role nodes
if [[ "$ROLEFLAG" == "all" ]]; then
  ROLEFLAG="etcd --controlplane --worker"
elif [[ "$ROLEFLAG" == "master" ]]; then
  ROLEFLAG="etcd --controlplane"
fi

# Get token
# Test if cluster is created
while true; do
  AGENTCMD=$(curl \
      -sLk \
      -H "Authorization: Bearer $LOGINTOKEN" \
      "https://$rancher_server_ip/v3/clusterregistrationtoken?clusterId=$CLUSTERID" | jq -r '.data[].insecureNodeCommand' | head -1)

  if [ -n "$AGENTCMD" ]; then
    break
  else
    sleep 5
  fi
done

# Combine command and flags
COMPLETECMD="$AGENTCMD --$ROLEFLAG"

# Run command
sh -c "$${COMPLETECMD}"
